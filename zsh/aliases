#!/bin/zsh -f

# file associations
alias -s html=uzbl --uri=
alias -s org=uzbl --uri=
alias -s com=uzbl --uri=
alias -s html=uzbl --uri=
alias -s org=uzbl --uri=
alias -s sh=bash
alias -s zsh=zsh
alias -s gif=feh
alias -s png=feh
alias -s jpg=feh

alias -s pl=perl
alias -s exe=wine

# better programs
alias_exists top htop
alias_exists more most
alias_exists ping mtr
alias_exists mpc boogie

# ls shortcuts
alias l="ls"
alias lsa="l -ld .*"
alias lsbig="l -lSh *(.) | head"
alias lsd="l -ld *(-/DN)"
alias lsnew="l -lrt *(.) | tail"
alias lsold="l -lrt *(.) | head"
alias lssmall="l -lSh *(.) | head"
alias lsnoext="l | grep -v '\.'"
alias lsd='ls -ld *(-/DN)'
alias l.='ls -d .[^.]*'
alias ll="l -l"
alias la="l -a"
alias lla="l -la"
alias lg="l | grep -i $1"

# nocorrect 
alias rm='nocorrect rm'
alias cp='nocorrect cp'
alias mv='nocorrect mv'
alias ln='nocorrect ln'
alias mkdir='nocorrect mkdir -p'

# shortcuts
alias which="whence -a"
alias p='ping'
alias h='history'
alias c="clear"
alias s='sudo -E'
alias su='s -s'
alias ej='eject'
alias k='killall'
alias e='vim'
alias t='thunar'
alias m="nice -n1 mplayer"
alias ml="nice -n1 mplayer -loop 0"
alias mls="nice -n1 mplayer -loop 0 -shuffle"
alias mn="nice -n1 mplayer -nosound"
alias find='LC_ALL="C" find'
alias grep='LC_ALL="C" grep'
alias g="grep"

# default options
alias ssh='ssh -AX'
alias ps='ps auxwww'
alias cpan="perl -MCPAN -e shell"
alias wget="wget -c"
alias ncmpc="ncmpc -c"

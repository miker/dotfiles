if [ !$SSH_TTY ]; then
    echo -n " * You are currently using ssh, You sure you want to powerdown this server? (yes/no) "
    read input
    if [ "$input" = "yes" ]; then
        echo " ! Powering off $HOST"
        sudo shutdown $@
    else
        echo " * Good luck with that..."
    fi
fi


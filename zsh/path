#!/bin/zsh -f

SCRIPTPATH="~/code/bin/clipboard"
cdpath=(~/code/bin ~/code/active)
PATH="/bin:/usr/bin:/usr/local/bin:/usr/X11R6/bin:/opt/virtualbox:/usr/share/texmf/bin:/usr/games/bin:/usr/libexec/git-core:$SCRIPT_PATH"
MANPATH="/usr/local/man:$MANPATH"
GEMPATH=`gem env gemdir`


if (( EUID == 0 )); then
    PATH="/sbin:/usr/sbin:/usr/local/sbin:$PATH"
fi

# remove duplicate entries from path,cdpath,manpath & fpath
typeset -gU SCRIPTPATH MANPATH GEMPATH ROOTPATH cdpath

[user]
	name = Greg Fitzgerald
	email = netzdamon@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
    ui = auto
    pager = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[alias]
    ci = commit -v -s
    commit = !git commit -v -s
    st = status
    pl = pull
    lo = log --date=local --pretty=full --stat
    me = log --date=local --pretty=short --author=netzdamon@gmail.com --stat
    rlog = log --pretty=format:\"%h %Cblue%cr%Creset %cn %Cgreen%s%Creset\"
    gp = push origin master:refs/heads/master
    gc = clean -f
    d = diff
    md = clone git:mideo.git mideo
    gitosis = clone git:gitosis-admin.git gitosis-admin 
    code = clone git@github.com:gregf/scripts.git bin
    dotfiles = clone git@github.com:gregf/dotfiles.git
    overlay = clone git@github.com:gregf/gregf-overlay.git
    initramfs = clone git@github.com:gregf/initramfs.git
    doc = clone git:doc.git doc
    gr = reset
    rev = revert HEAD
    count = shortlog -s -n

[apply]
    #whitespace = nowarn
[merge]
    tool = vimdiff
[core]
    excludesfile = /home/gregf/.gitignore
    editor = vim
    pager = most
    filemode = true
    bare = false
    logallrefupdates = true
    autocrlf = false
    whitespace = trailing-space,space-before-tab,indent-with-non-tab,cr-at-eol
[diff]
    ;external = /usr/bin/vimdiff
    renames = true
[giggle]
	main-window-maximized = false
	main-window-geometry = 1674x873+0+28
	history-view-vpane-position = 526
	main-window-view = FileView
	file-view-vpane-position = 398
